{
  "model_type": "transformer",
  "pretrained_model": "cardiffnlp/twitter-roberta-base-sentiment",
  "finetune": true,
  "freeze_layers": 0,
  "dropout": 0.1,
  "attention_dropout": 0.1,
  "classifier_dropout": 0.1,
  "hidden_dropout": 0.1,
  "num_classes": 3,
  "batch_size": 32,
  "gradient_accumulation_steps": 1,
  "effective_batch_size": 32,
  "learning_rate": 0.0005,
  "weight_decay": 0.01,
  "warmup_steps": 500,
  "max_seq_length": 128,
  "optimizer": "AdamW",
  "scheduler": "linear",
  "fp16_training": false,
  "clip_grad": true,
  "max_grad_norm": 1.0,
  "epochs": 5
}